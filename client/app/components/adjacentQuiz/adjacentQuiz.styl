@import '../../../styles'

.adjacentQuiz
	position relative
	height 600px
	display flex
	align-items flex-start
	justify-content center

.main-content
    background-color alpha(black, 40%)  

a.cheatLink
	color blue
	margin-top 3rem
	text-decoration none
	&:visited
	color blue
	&:hover
	&:active
		text-decoration none
		
.results-box
	position relative
	border 2px solid olive
	margin-top 1rem
	max-width 425px
	
.results-box-wrapper
	display flex
	flex-direction column
	align-items center

.quiz-results-title
	font-size 2em
	font-weight bold
	margin 1rem
	
.quiz-results
	margin-right auto
	text-align left
	margin 1rem

.quiz-results-error
	color red
		
				
.quiz-results-success
	color green
