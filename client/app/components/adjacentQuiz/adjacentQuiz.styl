@import '../../../styles'

section div h1
	font-size 25px

.adjacentQuiz
	position relative
	height 600px
	display flex
	flex-direction column
	align-items center
	justify-content flex-start
	margin-left 10px
	margin-right 10px

.main-content
  background rgba(47,05,18,0.4)

.results-box
	position relative
	border 2px solid olive
	margin-top 1rem
	width 100%

.results-box-wrapper
	display flex
	flex-direction column
	align-items center

.quiz-results-title
	font-size 1.5rem
	font-weight bold
	margin 0.5rem

.quiz-results
	margin-right auto
	text-align left
	margin 1rem

.quiz-results-error
	color red


.quiz-results-success
	color green

a.cheatLink
	color blue
	margin-top 3rem
	text-decoration none

